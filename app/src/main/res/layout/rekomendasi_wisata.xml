<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/green">

            <Button
                android:onClick="backafterreg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_chevron_left_24"
                android:backgroundTint="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
            <EditText
                android:id="@+id/namawisata"
                android:inputType="text"
                android:background="@drawable/green"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:hint="Nama Wisata"
                android:fontFamily="serif"
                android:textColorHint="@color/white"/>
            <EditText
                android:id="@+id/deskripsitempat"
                android:inputType="textMultiLine"
                android:background="@drawable/green1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:hint="Deskripsi"
                android:fontFamily="serif"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/waktu"
                android:inputType="text"
                android:background="@drawable/green"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:hint="Waktu"
                android:fontFamily="serif"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/lokasi"
                android:inputType="text"
                android:background="@drawable/green"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:hint="Lokasi"
                android:fontFamily="serif"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Kategori ?"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RadioButton
                    android:id="@+id/budaya"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budaya_Adat"
                    android:textColor="@color/green"
                    android:textSize="17dp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/umum"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Umum_Bali"
                    android:textColor="@color/green"
                    android:textSize="17dp"
                    android:fontFamily="serif"
                    android:textStyle="bold" />
            </RadioGroup>
            <EditText
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/green"
                android:fontFamily="serif"
                android:hint="Harga_Masuk"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/aturan"
                android:inputType="textMultiLine"
                android:background="@drawable/green1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:hint="Aturan"
                android:fontFamily="serif"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/key" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image"
                android:layout_marginTop="5dp"
                android:onClick="selectImage" />
        </LinearLayout>
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        <FrameLayout
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <Button
                android:id="@+id/submit"
                android:background="@drawable/white1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SUBMIT"
                android:textColor="@color/green"
                android:textSize="30dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:onClick="saveData"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>